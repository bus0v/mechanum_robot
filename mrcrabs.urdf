<robot name = "mrcrabs" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name = "base_width" value = "0.16"/>
  <xacro:property name = "base_length" value="0.36"/>
  <xacro:property name = "base_height" value="0.1"/>
  <xacro:property name = "wheel_radius" value="0.08"/>
  <xacro:property name = "wheel_width" value="0.04"/>
  <xacro:property name = "wheel_ygap" value="0.03"/>
  <xacro:property name = "wheel_zoff" value="-0.04"/>
  <xacro:property name = "wheel_xoff" value="0.12"/>
  <xacro:property name = "laser_zoff" value="0.05"/>
  <xacro:property name = "sonar_size" value = "0.02 0.02 0.02"/>
  <xacro:property name = "sonar_xoff" value = "0.18"/>
  <xacro:property name = "sonar_zoff" value = "0.02"/>
  <xacro:property name = "sonar_yoff" value = "0.08"/>
  <material name = "purple">
    <color rgba = "0.5 0 0.5 1"/>
  </material>

  <material name = "black">
    <color rgba = "0 0 0 1"/>
  </material>

  <material name = "blue">
    <color rgba = "0 0 0.8 1"/>
  </material>

  <link name = "base_link">
    <visual>
      <geometry>
        <box size = "${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name = "purple"/>
    </visual>
  </link>

  <link name = "base_laser">
    <visual>
      <geometry>
        <cylinder length="0.04" radius = "0.04"/>
      </geometry>
      <origin rpy = "0 0 0" xyz = "0 0 0"/>
      <material name = "blue"/>
    </visual>
  </link>

  <joint name = "laser_joint" type = "fixed">
    <parent link = "base_link"/>
    <child link = "base_laser"/>
    <origin xyz = "-0.07 0 0.10"/>
  </joint>

  <link name = "front_sonar">
    <visual>
      <geometry>
        <box size = "${sonar_size}"/>
      </geometry>
      <origin rpy = "0 0 0" xyz = "0 0 0"/>
      <material name = "black"/>
    </visual>
  </link>

  <joint name = "front_sonar_joint" type = "fixed">
    <parent link = "base_link"/>
    <child link = "front_sonar"/>
    <origin xyz = "${sonar_xoff} 0 ${sonar_zoff}"/>
  </joint>

  <link name = "back_sonar">
    <visual>
      <geometry>
        <box size = "${sonar_size}"/>
      </geometry>
      <origin rpy = "0 0 0" xyz = "0 0 0"/>
      <material name = "black"/>
    </visual>
  </link>

  <joint name = "back_sonar_joint" type = "fixed">
    <parent link = "base_link"/>
    <child link = "back_sonar"/>
    <origin xyz = "-${sonar_xoff} 0 ${sonar_zoff}"/>
  </joint>

  <link name = "left_sonar">
    <visual>
      <geometry>
        <box size = "${sonar_size}"/>
      </geometry>
      <origin rpy = "0 0 0" xyz = "0 0 0"/>
      <material name = "black"/>
    </visual>
  </link>

  <joint name = "left_sonar_joint" type = "fixed">
    <parent link = "base_link"/>
    <child link = "left_sonar"/>
    <origin xyz = " 0 ${sonar_yoff} ${sonar_zoff}"/>
  </joint>

  <link name = "right_sonar">
    <visual>
      <geometry>
        <box size = "${sonar_size}"/>
      </geometry>
      <origin rpy = "0 0 0" xyz = "0 0 0"/>
      <material name = "black"/>
    </visual>
  </link>

  <joint name = "right_sonar_joint" type = "fixed">
    <parent link = "base_link"/>
    <child link = "right_sonar"/>
    <origin xyz = " 0 -${sonar_yoff} ${sonar_zoff}"/>
  </joint>

</robot>
